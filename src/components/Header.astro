---
import {getTranslation} from "../i18n/utils.ts"
import NavBar from './NavBar.tsx'
import CtaButton from "./CtaButton.astro"
const lang = Astro.currentLocale
const t = await getTranslation(lang)
---

<header class="sticky bg-slate-100 top-0 left-0 z-20 w-vw">
  <div class="w-full max-w-5xl mx-auto flex p-1 items-center justify-start">
    <img src="/ea_sports_fc_logo.png" class="h-[30px]"/>
    <p class="text-lg sm:text-2xl line-clamp-1 font-extrabold rounded-full bg-black text-slate-100 px-3 ">{t.header.logo}</p>
    <div class="flex justify-end ml-auto">
    <CtaButton class="hidden sm:block text-sm shadow-none mx-2"/>
      <NavBar client:load translation={t}/>
    </div>
  </div>
</header>
