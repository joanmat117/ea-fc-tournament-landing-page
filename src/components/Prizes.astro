---
import { getTranslation } from "../i18n/utils"
import SectionTitle from "./SectionTitle.astro"


const t = await getTranslation(Astro.currentLocale)
---

<section id="prizes" class="p-2 scroll-mt-20">
  <SectionTitle
  title={t.prizes.title}
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-trophy"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17 3a1 1 0 0 1 .993 .883l.007 .117v2.17a3 3 0 1 1 0 5.659v.171a6.002 6.002 0 0 1 -5 5.917v2.083h3a1 1 0 0 1 .117 1.993l-.117 .007h-8a1 1 0 0 1 -.117 -1.993l.117 -.007h3v-2.083a6.002 6.002 0 0 1 -4.996 -5.692l-.004 -.225v-.171a3 3 0 0 1 -3.996 -2.653l-.003 -.176l.005 -.176a3 3 0 0 1 3.995 -2.654l-.001 -2.17a1 1 0 0 1 1 -1h10zm-12 5a1 1 0 1 0 0 2a1 1 0 0 0 0 -2zm14 0a1 1 0 1 0 0 2a1 1 0 0 0 0 -2z" /></svg>
  </SectionTitle>
  <p class="text-xl text-slate-700">
    {t.prizes.subtitle}
  </p>
  <div class="flex flex-wrap gap-3 my-4 p-1">
    {
t.prizes.items.map((award:{position:string,prize:string,extra:string,highlight:boolean})=>(
    <article class={`bg-slate-200/40 flex-1 min-w-[200px] p-2 border ${award.highlight?'border-yellow-500':'border-slate-300'} rounded-xl flex gap-2 flex-col items-center hover:bg-slate-200/90 transition-all`}>
      <div class="flex flex-col  py-1 items-center">
        <span class="text-4xl font-bold">
          {award.position.split(' ')[0]}
        </span>
        <span class="text-md text-slate-500">
          {award.position.split(' ')[1]}
        </span>
      </div>
      <h2 class={`flex align-bottom items-center shadow-md bg-brand-softer border border-slate-50/20 text-white ${award.highlight?'bg-yellow-500 shadow-yellow-500/30':'bg-green-500 shadow-green-500/30'} text-fg-brand-strong text-2xl font-extrabold leading-none px-3 py-1 rounded-full`}>
        {award.prize}
      </h2>
      <span class="px-2 text-nowrap mt-3 flex gap-1 items-center rounded-full bg-slate-300 text-slate-700">
        {award.extra}
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" class={`icon icon-tabler icons-tabler-filled icon-tabler-award ${award.highlight?'text-yellow-600':'text-green-600'}`}><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19.496 13.983l1.966 3.406a1.001 1.001 0 0 1 -.705 1.488l-.113 .011l-.112 -.001l-2.933 -.19l-1.303 2.636a1.001 1.001 0 0 1 -1.608 .26l-.082 -.094l-.072 -.11l-1.968 -3.407a8.994 8.994 0 0 0 6.93 -3.999z" /><path d="M11.43 17.982l-1.966 3.408a1.001 1.001 0 0 1 -1.622 .157l-.076 -.1l-.064 -.114l-1.304 -2.635l-2.931 .19a1.001 1.001 0 0 1 -1.022 -1.29l.04 -.107l.05 -.1l1.968 -3.409a8.994 8.994 0 0 0 6.927 4.001z" /><path d="M12 2l.24 .004a7 7 0 0 1 6.76 6.996l-.003 .193l-.007 .192l-.018 .245l-.026 .242l-.024 .178a6.985 6.985 0 0 1 -.317 1.268l-.116 .308l-.153 .348a7.001 7.001 0 0 1 -12.688 -.028l-.13 -.297l-.052 -.133l-.08 -.217l-.095 -.294a6.96 6.96 0 0 1 -.093 -.344l-.06 -.271l-.049 -.271l-.02 -.139l-.039 -.323l-.024 -.365l-.006 -.292a7 7 0 0 1 6.76 -6.996l.24 -.004z" /></svg>
      </span>
    </article>
    ))
    }
  </div>
  <p class="px-3 text-lg  font-light text-slate-700">
<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline-block align-middle icon icon-tabler icons-tabler-outline icon-tabler-certificate"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 15m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" /><path d="M13 17.5v4.5l2 -1.5l2 1.5v-4.5" /><path d="M10 19h-5a2 2 0 0 1 -2 -2v-10c0 -1.1 .9 -2 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -1 1.73" /><path d="M6 9l12 0" /><path d="M6 12l3 0" /><path d="M6 15l2 0" /></svg>
    {t.prizes.note}
  </p>
</section>
