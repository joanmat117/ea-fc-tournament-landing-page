---
import { getTranslation } from "../i18n/utils"

const t = await getTranslation(Astro.currentLocale)

const data = [
{
  ...t.contact.phone,
  icon:'<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-phone"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" /></svg>'
  },
  {
  ...t.contact.email,
  icon:'<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-mail"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" /></svg>'
  },
  {
  ...t.contact.hours,
  icon:'<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-calendar-week"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M16 2c.183 0 .355 .05 .502 .135l.033 .02c.28 .177 .465 .49 .465 .845v1h1a3 3 0 0 1 2.995 2.824l.005 .176v12a3 3 0 0 1 -2.824 2.995l-.176 .005h-12a3 3 0 0 1 -2.995 -2.824l-.005 -.176v-12a3 3 0 0 1 2.824 -2.995l.176 -.005h1v-1a1 1 0 0 1 .514 -.874l.093 -.046l.066 -.025l.1 -.029l.107 -.019l.12 -.007q .083 0 .161 .013l.122 .029l.04 .012l.06 .023c.328 .135 .568 .44 .61 .806l.007 .117v1h6v-1a1 1 0 0 1 1 -1m3 7h-14v9.625c0 .705 .386 1.286 .883 1.366l.117 .009h12c.513 0 .936 -.53 .993 -1.215l.007 -.16z" /><path d="M9.015 13a1 1 0 0 1 -1 1a1.001 1.001 0 1 1 -.005 -2c.557 0 1.005 .448 1.005 1" /><path d="M13.015 13a1 1 0 0 1 -1 1a1.001 1.001 0 1 1 -.005 -2c.557 0 1.005 .448 1.005 1" /><path d="M17.02 13a1 1 0 0 1 -1 1a1.001 1.001 0 1 1 -.005 -2c.557 0 1.005 .448 1.005 1" /><path d="M12.02 15a1 1 0 0 1 0 2a1.001 1.001 0 1 1 -.005 -2z" /><path d="M9.015 16a1 1 0 0 1 -1 1a1.001 1.001 0 1 1 -.005 -2c.557 0 1.005 .448 1.005 1" /></svg>'
  }
]
---

<section class="bg-gray-950 text-slate-50" id="contact">
    <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8 lg:py-20">
        <div class="mb-4">
            <div class="mb-6 max-w-3xl text-center sm:text-center md:mx-auto md:mb-12">
                <h2
                    class="mb-4 font-bold text-slate-100 text-4xl ">
                  {t.contact.title}
                </h2>
          </div>
        </div>
        <div class="flex items-stretch justify-center">
            <div class="grid md:grid-cols-2 gap-3">
                <div class="h-full pr-6">
                  <ul class="mb-6 md:mb-0">
                    {data.map(item=>(
                        <li class="flex gap-1 items-start justify-start">
                          <div set:html={item.icon} class="flex w-fit aspect-square p-2 text-lg bg-blue-500 items-center justify-center rounded-full "/>
                            <div class="ml-4 mb-4">
                              <h3 class="mb-2 text-lg font-medium leading-6 text-slate-100 ">
                                {item.label}
                                </h3>
                                <p class="text-slate-400 ">{item.value}</p>
                            </div>
                        </li>
                    ))}
                   </ul>
                </div>
                <div class="h-fit max-w-6xl p-5 " id="form">
                    <form id="contactForm">
                        <div class="mb-6">
                            <div class="mx-0 mb-1 sm:mb-4">
                                <div class="mx-0 mb-1 sm:mb-4">
                                  <label for="name" class="pb-1 text-xs uppercase tracking-wider"></label><input type="text" id="name" autocomplete="given-name" placeholder={t.contact.form.name} class="mb-2 w-full rounded-xl border-2 border-slate-600 transition-all focus:border-green-500 outline-none py-2 pl-2 pr-4 shadow-md  sm:mb-0" name="name">
                                </div>
                                <div class="mx-0 mb-1 sm:mb-4">
                                    <label for="email" class="pb-1 text-xs uppercase tracking-wider"></label><input type="email" id="email" autocomplete="email" placeholder={t.contact.form.email} class="mb-2 w-full rounded-xl transition-all border-2 border-slate-600 focus:border-green-500 outline-none py-2 pl-2 pr-4 shadow-md  sm:mb-0" name="email">
                                </div>
                            </div>
                            <div class="mx-0 mb-1 sm:mb-4">
                                <label for="textarea" class="pb-1 text-xs uppercase tracking-wider"></label><textarea id="textarea" name="textarea" cols="30" rows="5" placeholder={t.contact.form.message} class="mb-2 w-full rounded-xl border-2 transition-all border-slate-600 focus:border-green-500 outline-none py-2 pl-2 pr-4 shadow-md sm:mb-0"></textarea>
                            </div>
                        </div>
                        <div class="text-center">
                          <button type="submit" class="w-full bg-green-500 text-white px-6 py-3 text-lg font-semibold cursor-pointer tracking-wide rounded-xl sm:mb-0">{t.contact.form.send}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
