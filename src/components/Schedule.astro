---
import {getTranslation} from "../i18n/utils"

const t = await getTranslation(Astro.currentLocale)

---

<section id='schedule' class="p-2">
  <h2 class="text-4xl mb-5 flex gap-3 drop-shadow-sm font-bold">
    {t.schedule.title}
<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline-block icon icon-tabler icons-tabler-outline icon-tabler-calendar-clock"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10.5 21h-4.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v3" /><path d="M16 3v4" /><path d="M8 3v4" /><path d="M4 11h10" /><path d="M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" /><path d="M18 16.5v1.5l.5 .5" /></svg>
  </h2>

    <ol class="relative ml-10 border-s border-slate-300">
        {t.schedule.items.map((item: {time: string, activity: string, description: string}, index: number) => (
            <li class={`mb-10 ms-6 ${index === t.schedule.items.length - 1 ? '' : 'mb-10'}`}>
                <span class="absolute flex items-center justify-center w-6 h-6 bg-green-100 rounded-full -start-3 ring-8 ring-white">
                  <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-clock"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 7v5l3 3" /></svg>

                </span>
                <time class="bg-slate-100 border border-slate-300 text-slate-800 text-xs font-medium px-1.5 py-0.5 rounded">
                    {item.time}
                </time>
                <h3 class="flex items-center mb-1 text-lg font-semibold text-slate-800 my-2">
                    {item.activity}
                                    </h3>
                <p class="mb-4 text-slate-600">
                    {item.description}
                </p>
            </li>
        ))}
    </ol>
</section>
