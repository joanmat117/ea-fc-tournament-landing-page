---
import {getTranslation} from "../i18n/utils"
import SectionTitle from "./SectionTitle.astro"

const t = await getTranslation(Astro.currentLocale)

---

<section id='schedule' class="p-2 scroll-mt-20">
  <SectionTitle
  title={t.schedule.title}
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-timeline-event"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 17c1.306 0 2.418 .835 2.83 2h5.17a1 1 0 0 1 0 2h-5.171a3.001 3.001 0 0 1 -5.658 0h-5.171a1 1 0 0 1 0 -2h5.17a3.001 3.001 0 0 1 2.83 -2z" /><path d="M17 2a2 2 0 0 1 2 2v8a2 2 0 0 1 -2 2h-2.586l-1.707 1.707a1 1 0 0 1 -1.32 .083l-.094 -.083l-1.708 -1.707h-2.585a2 2 0 0 1 -1.995 -1.85l-.005 -.15v-8a2 2 0 0 1 2 -2h10z" /></svg>
  </SectionTitle>

    <ol class="relative ml-5 border-s border-slate-300">
        {t.schedule.items.map((item: {time: string, activity: string, description: string}, index: number) => (
            <li class={`mb-10 ms-6 ${index === t.schedule.items.length - 1 ? '' : 'mb-10'}`}>
                <span class="absolute flex text-white items-center justify-center w-6 h-6 bg-blue-500 ring-2 ring-blue-200 rounded-full -start-3">
                  <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-clock"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 7v5l3 3" /></svg>

                </span>
                <time class="bg-slate-100 border border-slate-300 text-slate-800 text-xs font-medium px-1.5 py-0.5 rounded">
                    {item.time}
                </time>
                <h3 class="flex items-center mb-1 text-lg font-semibold text-slate-800 my-2">
                    {item.activity}
                                    </h3>
                <p class="mb-4 text-slate-600">
                    {item.description}
                </p>
            </li>
        ))}
    </ol>
</section>
