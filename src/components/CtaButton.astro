---
import type { HTMLAttributes } from 'astro/types'
import {getTranslation} from '../i18n/utils'
import RegistrationModal from "./RegistrationModal.tsx"
const t = await getTranslation(Astro.currentLocale)

interface Props extends HTMLAttributes<'button'>{
  cta?:string
}

const {cta,class:className,...atts} = Astro.props

---

<RegistrationModal client:load  registration={t.registration}>
<button class={"bg-green-500 flex border-3 border-green-100/20 px-6 py-2 shadow-lg transition-all hover:scale-105 hover:tracking-wider text-lg cursor-pointer shadow-green-400/60 font-extrabold text-emerald-50 rounded-full "+ className} {...atts} >
  {cta ?? t.hero.ctaButton}
</button>
</RegistrationModal>
